  },
  "homepage": "https://github.com/hjanuschka/chromium-helper#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "cheerio": "^1.1.0",
    "node-fetch": "^3.3.2",
    "playwright": "^1.52.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
